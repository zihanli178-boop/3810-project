<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Notes Management</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      color: #333;
      height: 100vh;
      background-image: url('/image/3.jpg'); 
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    h2 {
      text-align: center;  
      margin-bottom: 20px;
      color: #007bff;
    }

    .content {
      max-width: 800px;
      margin-left: 40px;    
    }

    form {
      margin: 15px 0;
    }

    input[type="file"] {
      padding: 6px;
      border: 1px solid #ccc;
      border-radius: 4px;
      margin-right: 10px;
    }

    button {
      padding: 8px 16px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
    }

    button:hover {
      background-color: #0056b3;
    }

    ul {
      list-style: none;
      padding: 0;
      margin-top: 20px;
      max-width: 600px;
    }

    li {
      background: rgba(255,255,255,0.85);
      margin-bottom: 12px;
      padding: 15px;
      border-radius: 6px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    li a {
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
      margin-right: 15px;
    }

    li a:hover {
      text-decoration: underline;
    }

    .note-actions form {
      display: inline;
    }

    .note-actions button {
      margin-left: 8px;
      background-color: #6c757d;
    }

    .note-actions button:hover {
      background-color: #5a6268;
    }

    .note-actions .delete-btn {
      background-color: #dc3545;
    }

    .note-actions .delete-btn:hover {
      background-color: #a71d2a;
    }

    .back-button {
      position: fixed;
      bottom: 20px;
      right: 20px;
      padding: 10px 15px;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 5px;
      text-decoration: none;
      font-size: 14px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    }

    .back-button:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>
  <h2>Subject code: <%= subjectCode %></h2>

  <div class="content">
    <form action="/create" method="post" enctype="multipart/form-data">
      <input type="hidden" name="subjectCode" value="<%= subjectCode %>">
      <input type="file" name="file" required>
      <button type="submit">Create</button>
    </form>

    <ul>
      <% notes.forEach(note => { %>
        <li>
          <a href="/download/<%= note._id %>"><%= note.filename %></a>
          <div class="note-actions">
            <form action="/update/<%= note._id %>" method="post" enctype="multipart/form-data">
              <input type="file" name="file" required>
              <button type="submit">Update</button>
            </form>
            <form action="/delete/<%= note._id %>" method="post" onsubmit="return confirm('Confirm deletionï¼Ÿ');">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

  <a href="/search-page" class="back-button">Return search</a>
</body>
</html>

